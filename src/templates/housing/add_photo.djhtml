{% extends "housing/layout.djhtml" %}

{% block main %}

  {% if added %} 
    <h2>House added!</h2>
  {% endif %}
  <form enctype="multipart/form-data" action="" method="post">
    {% csrf_token %}
    <fieldset>
      <legend>Photos</legend>
      {% for photo in photos %}
        <img src="{{ MEDIA_URL }}{{ photo.img }}" alt="{{ photo.descr }}"/>
      {% endfor %}
      {{ photo_form.as_p }}
    </fieldset>
    <button>Submit</button>
  </form>
{% endblock %}
