<ul id="rooms">
  {% for room in rooms %}
    <li data-type="room" data-id="{{ room.id }}">
      {{ room.get_room_type_display }} 
      {% if room.other_type %}
	({{ room.other_type }})
      {% endif %}

      {% if room.surface %}
	Surface area :{{ room.surface }}m
      {% endif %}
      <button data-type="delete_room">Delete</button>
    </li>
  {% endfor %}
</ul>
{{ room_form.as_p }}
<button data-type="add_room">Add</button>

